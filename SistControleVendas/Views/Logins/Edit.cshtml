@model SistControleVendas.Models.Login

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar Login</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="LoginID" />
            <div class="form-group">
                <label asp-for="LoginNome" class="control-label"></label>
                <input asp-for="LoginNome" class="form-control" />
                <span asp-validation-for="LoginNome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Senha" class="control-label"></label>
                <input asp-for="Senha" class="form-control" />
                <span asp-validation-for="Senha" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NivelAcesso" class="control-label"></label>
                <input asp-for="NivelAcesso" class="form-control" />
                <span asp-validation-for="NivelAcesso" class="text-danger"></span>
            </div>
        </form>
    </div>
</div>

<p> </p>

<div>
    <a asp-action="Index" class="btn btn-outline-info" type="submit">Editar</a>
    <a asp-action="Index" class="btn btn-primary">Voltar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
