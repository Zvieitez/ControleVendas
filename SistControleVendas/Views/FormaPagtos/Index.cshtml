@model IEnumerable<SistControleVendas.Models.FormaPagto>

@{
    ViewData["Title"] = "Index";
}

<h1>Forma de Pagamento</h1>

<p>
    <a asp-action="Create">Cadastrar Nova</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CartaoCred)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CartaoDeb)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Pix)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CartaoCred)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CartaoDeb)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Pix)
            </td>
            <td>
                <a asp-action="Edit" class="btn btn-outline-dark" asp-route-id="@item.FormaPagtoID"><i class="bi bi-pencil-fill"></i>Editar</a>
                <a asp-action="Details" class="btn btn-outline-info" asp-route-id="@item.FormaPagtoID"><i class="bi bi-file-earmark-fill"></i>Detalhes</a> 
                <a asp-action="Delete" class="btn btn-outline-danger" asp-route-id="@item.FormaPagtoID"><i class="bi bi-trash3-fill"></i>Deletar</a>
            </td>
        </tr>
}
    </tbody>
</table>
