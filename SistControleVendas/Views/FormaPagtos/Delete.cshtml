    ViewData["Title"] = "Delete";
}

<h1>Forma de Pagamento</h1>

<h3>Tem certeza de que deseja deletar este registro?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CartaoCred)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CartaoCred)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CartaoDeb)
        </dt>
        <dd class = "col-sm-10">
